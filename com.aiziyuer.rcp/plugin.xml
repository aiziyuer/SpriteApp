<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.aiziyuer.bundle.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.aiziyuer.bundle.Perspective"
            fixed="true"
            id="com.aiziyuer.bundle.perspective"
            name="RCP Perspective">
      </perspective>
   </extension>
   <extension
         id="app.product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.aiziyuer.rcp.application"
            name="Hello RCP">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="help"
               label="Help">
            <command
                  commandId="example.bundle.commands.sampleCommand"
                  id="example.bundle.menus.sampleCommand">
            </command>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About"
                  style="push">
            </command>
         </menu>
         <menu
               label="Windows">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="example.bundle.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="example.bundle.commands.category"
            id="example.bundle.commands.sampleCommand"
            name="Example Bundle Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.aiziyuer.bundle.handlers.SampleHandler"
            commandId="example.bundle.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="example.bundle.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.eclipse.ui.navigator.CommonNavigator"
            id="com.aiziyuer.rcp.CommonNavigator"
            name="Navigator"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="com.aiziyuer.bundle.views.ssh.SshSessionViewPart"
            id="com.aiziyuer.bundle.views.SshSessionViewPart"
            name="SSH Connection">
      </view>
      <view
            class="com.aiziyuer.bundle.views.hosts.HostListViewPart"
            id="com.aiziyuer.bundle.views.HostListViewPart"
            name="HostListViewPart">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
         <perspectiveExtension targetID="com.aiziyuer.bundle.perspective">
            <view
                  closeable="false"
                  id="com.aiziyuer.rcp.CommonNavigator"
                  minimized="false"
                  relationship="left"
                  relative="com.aiziyuer.rcp.CommonNavigator"
                  showTitle="true"
                  standalone="true"
                  visible="true">
            </view>
         <view
               closeable="false"
               id="com.aiziyuer.bundle.views.SshSessionViewPart"
               minimized="false"
               moveable="true"
               ratio="0.3f"
               relationship="right"
               relative="com.aiziyuer.rcp.CommonNavigator"
               showTitle="true"
               standalone="true"
               visible="true">  
         </view>
         <view
               id="com.aiziyuer.bundle.views.HostListViewPart"
               minimized="false"
               relationship="stack"
               relative="com.aiziyuer.bundle.views.SshSessionViewPart"
               visible="true">
         </view>
         </perspectiveExtension>  
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="com.aiziyuer.rcp.viewer1">
      </viewer>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="com.aiziyuer.bundle.views.navigator.MyNavigatorContentProvider"
            id="com.aiziyuer.rcp.navigatorContent1"
            labelProvider="com.aiziyuer.bundle.views.navigator.MyNavigatorLabelProvider"
            name="Properties File Contents"
            priority="normal">
         <triggerPoints>
            <or>
               <and>
                  <instanceof
                        value="org.eclipse.core.resources.IResource">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.eclipse.core.resources.extension"
                        value="properties">
                  </test></and>
               <instanceof
                     value="com.aiziyuer.bundle.views.navigator.PropertiesTreeData">
               </instanceof>
            </or></triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="com.aiziyuer.bundle.views.navigator.PropertiesTreeData">
               </instanceof>
            </or>
         </possibleChildren>
      </navigatorContent>
          <commonFilter  
                id="org.eclipse.ui.examples.navigator.filters.hideNonJavaProjects"  
                name="Hide non-Java Projects">  
             <filterExpression>  
                <not>  
                   <adapt  
                         type="org.eclipse.core.resources.IProject">  
                      <test  
                            property="org.eclipse.core.resources.projectNature"  
                            value="org.eclipse.jdt.core.javanature">  
                      </test>  
                   </adapt>  
                </not>  
             </filterExpression>  
          </commonFilter> 
   </extension>
   <extension
         id="com.aziyuer.rcp.SamplePreferencePage"
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.aiziyuer.bundle.SamplePreferencePage"
            id="com.aiziyuer.bundle.SamplePreferencePage"
            name="Sample PreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.aiziyuer.bundle.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
